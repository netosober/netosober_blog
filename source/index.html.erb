---
pageable: true
per_page: 10
---
<ul>
  <% page_articles.each_with_index do |article, i| %>
    <li>
      <h3 class="article_title"><%= link_to article.title, article %></h3>
      <p><em><%= article.date.strftime('%b %d, %Y')%></em></p>
      <p><%= article.summary %></p>
    </li>
  <% end %>
</ul>